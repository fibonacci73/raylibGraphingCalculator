{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "type": "process",
            "command": "make",
            "args": ["BUILD_MODE=DEBUG", "PLATFORM=PLATFORM_DESKTOP"],
            "options": {
                "shell": { "executable": "C:\\msys64\\usr\\bin\\bash.exe", "args": ["-c"] }
            },
            "windows": {
                "command": "C:\\msys64\\ucrt64\\bin\\mingw32-make.exe",
                "args": ["RAYLIB_PATH=C:/raylib/raylib", "BUILD_MODE=DEBUG"]
            },
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "build release",
            "type": "process",
            "command": "make",
            "args": ["BUILD_MODE=RELEASE", "PLATFORM=PLATFORM_DESKTOP"],
            "options": {
                "shell": { "executable": "C:\\msys64\\usr\\bin\\bash.exe", "args": ["-c"] }
            },
            "windows": {
                "command": "C:\\msys64\\ucrt64\\bin\\mingw32-make.exe",
                "args": ["RAYLIB_PATH=C:/raylib/raylib", "BUILD_MODE=RELEASE"]
            },
            "group": "build",
            "problemMatcher": ["$gcc"]
        }
    ]
}
